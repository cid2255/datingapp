# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project-id.iam.gserviceaccount.com

# Cloud Messaging Configuration
FCM_SERVER_KEY=your-fcm-server-key

# Premium Features Configuration
PREMIUM_FEATURES_PRICE=9.99
PREMIUM_FEATURES_CURRENCY=USD
PREMIUM_FEATURES_DURATION_DAYS=30

# Location Services Configuration
LOCATION_UPDATE_INTERVAL=60000
LOCATION_DISTANCE_THRESHOLD=1000

# Call Configuration
CALL_TIMEOUT=300000
CALL_RECORDING_ENABLED=true
CALL_RECORDING_MAX_DURATION=3600000

# Storage Configuration
STORAGE_BUCKET=your-project-id.appspot.com
MAX_PROFILE_IMAGE_SIZE=5242880
MAX_MESSAGE_IMAGE_SIZE=5242880
MAX_CALL_RECORDING_SIZE=5242880

# Security Configuration
MAX_MESSAGE_LENGTH=10000
MAX_CALL_DURATION=3600000
MAX_LOCATION_UPDATES_PER_HOUR=60

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLE_RATE=0.1

# Error Reporting Configuration
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_SAMPLE_RATE=0.1
