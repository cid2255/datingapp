<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fileAttachmentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Image Attachment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/imageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_image"
            android:text="Image"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@id/documentButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Document Attachment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/documentButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_document"
            android:text="Document"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@id/audioButton"
            app:layout_constraintStart_toEndOf="@id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Audio Attachment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/audioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_audio"
            android:text="Audio"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@id/videoButton"
            app:layout_constraintStart_toEndOf="@id/documentButton"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Video Attachment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/videoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_video"
            android:text="Video"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/audioButton"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Location Share Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/locationButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_location"
            android:text="Location"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@id/contactButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageButton" />

        <!-- Contact Share Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_contact"
            android:text="Contact"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/locationButton"
            app:layout_constraintTop_toBottomOf="@id/videoButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
